{% set filterCollapsed = (app.request.query.get(form.vars.name) is null)? 'collapsed' : '' %}
{% set filterShow = (app.request.query.get(form.vars.name) is not null)? 'show' : '' %}
<div class="card card-filter">
    <h5 class="card-header">
        <a data-toggle="collapse" href="#collapse-filter" aria-expanded="true" aria-controls="collapse-filter" id="card-header-filter" class="d-block {{ filterCollapsed }}">
            <i class="fa fa-chevron-down" style="float: right; margin-left: .3em;"></i>
            Filtres de recherche
        </a>
    </h5>
    <div id="collapse-filter" class="collapse {{ filterShow }}" aria-labelledby="card-header-filter">
        <div class="card-body">
            {{ form_start(form) }}
            {% for field in form.children %}
                {{ form_row(field) }}
            {% endfor %}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    Filtrer
                </button>
                <a href="{{ app.request.pathInfo }}" class="btn btn-secondary">
                    RÃ©initialiser
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>