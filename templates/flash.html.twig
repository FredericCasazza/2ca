<script>
    {% for label, messages in app.flashes() %}
        {% for message in messages %}
            let autohide = false;
            {% if label in ['success', 'info'] %}
                autohide = true;
            {% endif %}
            $(document).Toasts('create', {
                class: 'bg-{{ label }} flash',
                autohide: autohide,
                delay: 3000,
                body: '{{ message }}'
            });
        {% endfor %}
    {% endfor %}
</script>