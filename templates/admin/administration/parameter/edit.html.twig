{% extends 'admin/administration/parameter/layout.html.twig' %}

{% block main %}
    {{ form_start(form) }}
    <div class="toolbar sticky-top">
        <h3>Configuration environnement {{ form.vars.value.env }}</h3>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                Enregistrer
            </button>
        </div>
    </div>

    <div class="container-fluid pt-2">

        <!-- Session -->
        <div class="card">
            <h5 class="card-header">
                <a data-toggle="collapse" href="#collapse-session" aria-expanded="true" aria-controls="collapse-example" id="heading-session" class="d-block">
                    <i class="fa fa-chevron-down pull-right"></i>
                    Session
                </a>
            </h5>
            <div id="collapse-session" class="collapse show" aria-labelledby="heading-session">
                <div class="card-body">
                    <div class="form-group row">
                        {{ form_label(form.sessionMaxIdleTime, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.sessionMaxIdleTime) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mailer -->
        <div class="card">
            <h5 class="card-header">
                <a data-toggle="collapse" href="#collapse-mail" aria-expanded="true" aria-controls="collapse-example" id="heading-mail" class="d-block">
                    <i class="fa fa-chevron-down pull-right"></i>
                    Mail
                </a>
            </h5>
            <div id="collapse-mail" class="collapse show" aria-labelledby="heading-mail">
                <div class="card-body">
                    <div class="form-group row">
                        {{ form_label(form.mailerHost, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerHost) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerPort, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerPort) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerEncryption, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerEncryption) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerAuthMode, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerAuthMode) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerUsername, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerUsername) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerPassword, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerPassword) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerTimeout, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerTimeout) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerSubjectPrefix, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerSubjectPrefix) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.mailerFrom, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.mailerFrom) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recaptcha -->
        <div class="card">
            <h5 class="card-header">
                <a data-toggle="collapse" href="#collapse-recaptcha" aria-expanded="true" aria-controls="collapse-example" id="heading-recaptcha" class="d-block">
                    <i class="fa fa-chevron-down pull-right"></i>
                    Recaptcha
                </a>
            </h5>
            <div id="collapse-recaptcha" class="collapse show" aria-labelledby="heading-recaptcha">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label required">Activer recaptcha</label>
                        <div class="col-sm-10">
                            {{ form_row(form.recaptchaEnable, {'label_attr': {class: 'checkbox-custom'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.recaptchaSiteKey, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.recaptchaSiteKey) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.recaptchaSecretKey, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.recaptchaSecretKey) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}