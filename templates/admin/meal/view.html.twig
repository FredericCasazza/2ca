{% extends 'admin/meal/layout.html.twig' %}

{% block main %}
    <div class="toolbar sticky-top">
        <div class="row">
            <div class="col-md-6">
                <h3 class="pl-3">
                    #{{ meal.id }} - {{ meal.date|localdate('long') }} ({{ meal.period.label }})
                </h3>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end">
                    <button type="button" id="add_dish" class="modal-action btn btn-primary mr-2"
                            data-action-title="Ajouter un plat"
                            data-action-url="{{ path('admin_catalog_meal_add_dish', {'id': meal.id}) }}"
                    >
                        Ajouter un plat
                    </button>
                    <button type="button" id="edit_meal" class="modal-action btn btn-outline-primary"
                            data-action-title="Modifier le menu"
                            data-action-url="{{ path('admin_catalog_meal_edit', {'id': meal.id}) }}"
                    >
                        Modifier
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid ">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <ul class="list-group">
                            {% for establishment in meal.establishments %}
                                <li class="list-group-item">{{ establishment.label }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-md-8">
                        <div class="card card-menu">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                                <h3 class="mb-4">Menu</h3>

                                {% for category, dishes in dishesByCategories %}
                                    {% if dishes is not empty %}
                                        {% if loop.first == false %}
                                            <span class="separator my-3">~</span>
                                        {% endif %}
                                        <h4>{{ category }}</h4>
                                        {% for dish in dishes %}
                                            <span>
                                                {{ dish.label }}
                                                <a href="#" class=" modal-action"
                                                   data-action-title="Supprimer un plat"
                                                   data-action-url="{{ path('admin_dish_remove', {'id': dish.id}) }}"
                                                >
                                                    <i class="far fa-trash-alt text-danger"></i>
                                                </a>
                                            </span>
                                        {% endfor %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
                        $('.modal-action').click(function(){
                let title = $(this).data('action-title');
                let url = $(this).data('action-url');
                $.get(
                    url
                ).done(function(data){
                    $('#modal_app_title').html(title);
                    $('#modal_app_body').html(data);
                    $('#modal_app').modal('show');
                });
            });
        });
    </script>
{% endblock %}