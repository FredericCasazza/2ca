{% extends 'admin/catalog/establishment/layout.html.twig' %}

{% block main %}
    {{ form_start(form) }}
    <div class="toolbar sticky-top">
        <div class="row">
            <div class="col-md-6">
                <h3 class="pl-3">
                    <a href="{{ path('admin_establishments') }}">
                        <i class="fas fa-arrow-circle-left text-primary mr-2"></i>
                    </a>
                    #{{ form.vars.value.id }} - {{ form.vars.value.label }}
                </h3>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-2">
        <div class="card">
            <div class="card-body">
                {{ form_row(form.label) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
